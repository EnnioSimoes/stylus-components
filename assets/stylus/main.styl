/*BASE CSS*/
*
    margin 0
    padding 0
    font-family "Helvetica Neue", Helvetica, Sans-serif;
h1
    font-size 40px
    font-weight bold
    color #191919
p
    color #888
    padding 5px 0
    
prefix(prop, val){
    -webkit-{prop} val
    -moz-{prop} val
    {prop} val
}

/*=======================
MENU SLIDEDOWN CSS3*/

#menu-sld-toggle
    position absolute
    cursor pointer
    left -100%
    top -100%
#menu-sld-menu
    background #181818
    color #fff
    position absolute
    top -250px
    left 0
    width 100%
    height 250px
    padding 20px
    prefix(transition, top 300ms cubic-bezier(0.15,0.04,0.03,0.94))
    overflow hidden
    box-sizing border-box
#menu-sld-toggle+label
    position absolute
    cursor pointer
    padding 10px
    background #0b5fc7
    width 100px
    border-radius 45px
    padding 8px 10px
    color #fff
    line-height 20px
    font-size 14px
    text-align center
    margin 20px 50px
    prefix(transition, all 500ms ease)
    &:after
        content "Abrir"
#menu-sld-toggle:checked~#menu-sld-menu
    top 0
#menu-sld-container
    prefix(transition, margin 300ms cubic-bezier(0.15,0.04,0.03,0.94))
    padding 5em 3em
#menu-sld-toggle:checked~#menu-sld-container
    margin-top 250px
#menu-sld-toggle:checked+label
    background #dc3b3b
    &:after
        content "Fechar"

